<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="deleteModalLabel">Suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-dark">
                Êtes-vous sûr de vouloir supprimer
                {% if app.request.get('_route') == 'list_user_timers' or app.request.get('_route') == 'list_timers' %}
                    ce timer
                {% elseif app.request.get('_route') == 'list_projects' %}
                    ce projet
                {% elseif app.request.get('_route') == 'list_teams' %}
                    cette équipe
                {% endif %}
                ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                {% if app.request.get('_route') == 'list_user_timers' or app.request.get('_route') == 'list_timers' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_timer', {id: timer.id}) }}">
                        Supprimer
                    </a>
                {% elseif app.request.get('_route') == 'show_timer' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_timer', {id: timer.id}) }}">
                        Supprimer
                    </a>
                {% elseif app.request.get('_route') == 'list_projects' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_project', {id: project.id}) }}">
                        Supprimer
                    </a>
                {% elseif app.request.get('_route') == 'show_project' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_project', {id: project.id}) }}">
                        Supprimer
                    </a>
                {% elseif app.request.get('_route') == 'list_teams' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_team', {id: team.id}) }}">
                        Supprimer
                    </a>
                {% elseif app.request.get('_route') == 'show_team' %}
                    <a role="button" class="btn btn-primary" href="{{ path('remove_team', {id: team.id}) }}">
                        Supprimer
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>