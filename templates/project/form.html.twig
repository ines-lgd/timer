{% extends 'base.html.twig' %}

{% block title %}- Projet{% endblock %}

{% block body %}
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="{{ asset('js/team.js') }}" type="text/javascript"></script>
    </head>

<div class="container">
    <div class="row">
        <div class="col-md-12 my-5">
            <h1>{% if app.request.get('_route') == 'update_project' %}
                    Modifier le
                {% else %}
                    Ajouter un
                {% endif %} projet
            </h1>
        </div>

        <div class="col-xl-9 col-lg-10 col-md-11 col-12 mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('list_projects') }}">Vos Projets</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('show_project', {id: project.id}) }}">{{ project.name }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{% if app.request.get('_route') == 'update_project' %} Modifier le{% else %} Ajouter un{% endif %} projet</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12 my-4">
            {{ form_start(form) }}

            <div class="row flex form-ul-style">
                <div class="col-md-6 my-3">
                    {{ form_label(form.name, 'Nom du projet : ', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-input form-control col-md-12'}}) }}
                    {{ form_errors(form.name, {'attr': {'class': 'col-md-12 '}}) }}
                </div>
                <div class="col-md-6 my-3">
                    {{ form_label(form.leader, 'Leader : ', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.leader, {'attr': {'class': 'form-input form-control col-md-12'}}) }}
                    {{ form_errors(form.leader, {'attr': {'class': 'col-md-12 '}}) }}
                </div>
                <div class="col-md-12 my-3">
                    {{ form_label(form.description, 'Description : ', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-input form-control col-md-12'}}) }}
                    {{ form_errors(form.description, {'attr': {'class': 'col-md-12 '}}) }}
                </div>
                <div class="col-md-6 my-5 ">
                    {{ form_widget(form.submit, { 'label': 'Valider', 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
