{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Projects ✅</h1>

    {% for project in projects %}
        <a href="{{ path('show_project', {id: project.id}) }}">{{ project.name }}</a>
        <br />
        Date de création: {{ project.createdAt | date('d M Y') }}
        <br />
        Crée par : {{ project.createdBy.pseudo }} <br />

        <!--<a href="{{ path('update_project', {id: project.id}) }}">Modifier</a>
        <a style="color: red" href="{{ path('remove_project', {id: project.id}) }}">Supprimer</a>-->
        <br />
        <br />
        <br />
    {% endfor %}
</div>
{% endblock %}
