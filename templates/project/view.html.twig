{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="{{ asset('js/team.js') }}" type="text/javascript"></script>
    </head>

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ project.name }}</h1>
        <br />
        {% if project is defined %}
            <h4>Description :</h4>
            {{ project.description }}
            <br />
            <h4>Team :</h4>
            <a href="{{ path('show_team', {id: project.team.id }) }}">{{ project.team.name }}</a>
            <br />
            <h4>Leader :</h4>
            {{ project.leader.pseudo }}
            <br />
            <h4>Créé par :</h4>
            {{ project.createdBy.pseudo }}
            <br />
            <h4>Date de création : </h4>{{ project.createdAt | date('d M Y') }}
            <br />
            <h4>Date de dernière mise à jour : </h4>{{ project.updatedAt | date('d M Y H:i:s') }}
            <br />
            <br />

            {% if app.user.pseudo == project.leader.pseudo %}
            <a href="{{ path('update_project', {id: project.id }) }}">Modifier</a>
            <br />
            <a style="color: red" href="{{ path('remove_project', {id: project.id}) }}">Supprimer</a>
            {% endif %}

        {% endif %}

    </div>
{% endblock %}
