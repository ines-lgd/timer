                        {% endif %}
                    </div>
                    </div>
                    <div class="ml-3 mt-3 col-12">
                        Cr√©√© le {{ timer.createdAt | date('d M Y') }} par {{ timer.user.username }}
                        <div>
                            <a class="text-danger" href="{{ path('remove_timer', {id: timer.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
                <div class="row ml-md-2 my-3">

                </div>
