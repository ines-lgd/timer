{% extends 'base.html.twig' %}

{% block title %}- Timer Dashboard{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="col-8 mt-5">Timer</h1>
    </div>
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-11 ">
            <div class="container">
                <div class="row ml-md-2">
                    <div class="col-12 d-flex mb-0">
                        <h4>{{ timer.name }}</h4>
                        <span class="ml-auto">
                            <a href="{{ path('update_timer', {id: timer.id}) }}">Modifier</a>
                        </span>
                    </div>
                    <div class="col-12 ml-2"> Description : {{ timer.description }}</div>
                    <div class="col-12 ml-2"> Statut : {{ timer.getStatusToString }}</div>

                    {% if timer.end is not empty %}
                    <div class="col-12 ml-2">
                        Temps : {{ timer.getTime }}
                    </div>
                    {% endif %}
                    <div class="col-12 ml-2 d-flex justify-content-center timer">
                        <div class="col-4">
                        <div id="timer" data-status="{{ timer.getStatusToString }}" data-timer="{{ timer.start | json_encode() }}"></div>
                        </div>
                    </div>
                    <div class="col-12 ml-2 d-flex justify-content-around">
                        {% if timer.getStatusToString == 'PR√äT' %}
