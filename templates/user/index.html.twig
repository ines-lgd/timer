{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for user in users %}
        Nom et Prénom : {{ user.username }} <br />
        Pseudo : {{ user.pseudo }} <br />
        E-mail : {{ user.email }} <br />
        Date de création: {{ user.createdAt | date('d M Y') }} <br />
        <a href="{{ path("set_user", {id: user.id}) }}">Modifier</a>
        <a style="color: red" href="{{ path("remove_user", {id: user.id}) }}">Supprimer</a>
        <br />
        <br />
        <br />
    {% endfor %}
</div>
{% endblock %}
