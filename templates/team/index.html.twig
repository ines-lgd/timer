{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Teams ✅</h1>

    {% for team in teams %}
        <a href="{{ path('show_team', {id: team.id}) }}">{{ team.name }}</a> <br />
        Membres :
        <br />
        {% for user in team.users %}
            {% if team.createdBy.id is same as (user.id) %}
                - {{ user.name }} : {{ user.pseudo}} (admin)<br />
            {% else %}
                - {{ user.name }} : {{ user.pseudo}}<br />
            {% endif %}
        {% endfor %}
        Date de création: {{ team.createdAt | date('d M Y') }} <br />
        Crée par : {{ team.createdBy.pseudo }} <br />

        <!--<a href="{{ path('update_team', {id: team.id}) }}">Modifier</a>
        <a style="color: red" href="{{ path('remove_team', {id: team.id}) }}">Supprimer</a>-->
        <br />
        <br />
        <br />
    {% endfor %}
</div>
{% endblock %}
